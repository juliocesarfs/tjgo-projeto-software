@startuml C4_Context_ControlTasks

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' ============================================================================
' SYSTEM CONTEXT DIAGRAM - Level 1
' Control Tasks - Sistema de Gerenciamento de Tarefas, Notas, Equipes, Comentários, Atividades e Notificações (Web e Mobile)
' ============================================================================

LAYOUT_WITH_LEGEND()

' ============================================================================
' ATORES / USUÁRIOS
' ============================================================================
Person(teamManager, "Gerente de Equipe", "Cria, atribui e define prazos para tarefas, gera registros de progresso, cria subtarefas, recebe notificações por email, visualiza histórico e exporta dados. Gerencia equipe via web ou mobile.")

Person(teamMember, "Membro da Equipe", "Edita tarefas em tempo real, marca como concluída, recebe notificações por email, exporta dados e acessa via mobile. Colabora em equipe.")

Person(autonomous, "Pessoa Autônoma", "Marca tarefas como concluída, exporta dados, personaliza interface e acessa via mobile. Trabalha de forma independente.")

Person(adminPerson, "Admin (Administrador)", "Gerencia equipes, usuários, tarefas, comentários, notificações e tem acesso completo ao sistema, incluindo estatísticas globais e histórico.")




' ============================================================================
' SISTEMA PRINCIPAL
' ============================================================================
System(controlTasks, "Control Tasks", "Sistema de Gerenciamento de Tarefas, Notas, Equipes, Comentários, Atividades e Notificações acessível via Web e Mobile. Inclui interface, lógica de negócio e armazenamento de dados.")

' ============================================================================
' BANCO DE DADOS
' ============================================================================


' ============================================================================
' SISTEMAS EXTERNOS (FUTURO)
' ============================================================================
System_Ext(emailService, "Email Service API (Externa)", "API externa contratada para envio de emails transacionais e notificações aos usuários")

' ============================================================================
' RELACIONAMENTOS
' ============================================================================





' Gerente de Equipe
Rel(teamManager, controlTasks, "Cria e atribui tarefas, define prazos, gera registros de progresso, cria subtarefas, recebe notificações por email, visualiza histórico e exporta dados via web ou mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, teamManager, "Retorna dados de tarefas, progresso, histórico, notificações e relatórios", "HTTPS (Web/Mobile)")

' Membro da Equipe
Rel(teamMember, controlTasks, "Edita tarefas em tempo real, marca como concluída, recebe notificações por email, exporta dados e colabora via web ou mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, teamMember, "Retorna dados de tarefas, comentários, estatísticas e notificações", "HTTPS (Web/Mobile)")

' Pessoa Autônoma
Rel(autonomous, controlTasks, "Marca tarefas como concluída, exporta dados, personaliza interface e acessa via mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, autonomous, "Retorna dados de tarefas, estatísticas e notificações", "HTTPS (Web/Mobile)")

' Admin
Rel(adminPerson, controlTasks, "Gerencia sistema, equipes, usuários, notas, comentários, notificações e estatísticas globais via web ou mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, adminPerson, "Retorna dados, relatórios, estatísticas e histórico completo", "HTTPS (Web/Mobile)")



' Integração com Email
Rel(controlTasks, emailService, "Solicita envio de emails transacionais e notificações", "REST API/SMTP (Serviço Contratado)")

@enduml
