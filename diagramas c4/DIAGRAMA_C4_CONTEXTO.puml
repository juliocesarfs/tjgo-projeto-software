@startuml C4_Context_ControlTasks

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' ============================================================================
' SYSTEM CONTEXT DIAGRAM - Level 1
' Control Tasks - Sistema de Gerenciamento de Tarefas, Notas, Equipes, Comentários, Atividades e Notificações (Web e Mobile)
' ============================================================================

LAYOUT_WITH_LEGEND()

' ============================================================================
' ATORES / USUÁRIOS
' ============================================================================
Person(teamManager, "Gerente de Equipe", "Gerencia equipe, cria e atribui tarefas, define prazos e gera relatórios")

Person(user, "Usuário", "Pode trabalhar de forma independentemente ou participar de equipes")

Person(adminPerson, "Admin (Administrador)", "Gerencia sistema, equipes, usuários e tem acesso completo")




' ============================================================================
' SISTEMA PRINCIPAL
' ============================================================================
System(controlTasks, "Control Tasks", "Sistema de Gerenciamento de Tarefas, via Web e Mobile.")

' ============================================================================
' BANCO DE DADOS
' ============================================================================


' ============================================================================
' SISTEMAS EXTERNOS (FUTURO)
' ============================================================================
System_Ext(emailService, "Email Service API", "SendGrid/AWS SES", "API externa para envio de emails transacionais e notificações aos usuários")

' ============================================================================
' RELACIONAMENTOS
' ============================================================================





' Gerente de Equipe
Rel(teamManager, controlTasks, "Cria e atribui tarefas, define prazos, gera registros de progresso, cria subtarefas, recebe notificações por email, visualiza histórico e exporta dados via web ou mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, teamManager, "Retorna dados de tarefas, progresso, histórico, notificações e relatórios", "HTTPS (Web/Mobile)")

' Usuário
Rel(user, controlTasks, "Edita tarefas, marca como concluída, recebe notificações por email, exporta dados, personaliza interface e colabora ou trabalha independentemente via web ou mobile")
Rel(controlTasks, user, "Retorna dados de tarefas, comentários, estatísticas e notificações")

' Admin
Rel(adminPerson, controlTasks, "Gerencia sistema, equipes, usuários, notas, comentários, notificações e estatísticas globais via web ou mobile", "HTTPS (Web/Mobile)")
Rel(controlTasks, adminPerson, "Retorna dados, relatórios, estatísticas e histórico completo", "HTTPS (Web/Mobile)")



' Integração com Email
Rel(controlTasks, emailService, "Solicita envio de emails transacionais e notificações", "REST API/SMTP")

@enduml
